{
  "name": "ts-option",
  "version": "1.0.0",
  "description": "A typescript option monad implementation",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "index.js.map",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.js.map",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nbeach/ng-unit.git"
  },
  "author": "Nicholas Beach <nicholas.c.beach@gmail.com> (http://nicholasbeach.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nbeach/ts-option/issues"
  },
  "keywords": [
    "option",
    "optional",
    "monad",
    "functional",
    "null safety"
  ],
  "scripts": {
    "clean": "rimraf src/**/*.js src/**/*.js.map src/**/*.d.ts",
    "build": "npm run clean && tsc",
    "test": "mocha --opts mocha.opts --watch",
    "test:coverage": "nyc mocha --opts mocha.opts",
    "lint": "tslint --project .",
    "ci": "yarn lint && yarn test:coverage && yarn build && nyc report --reporter=text-lcov | coveralls "
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "src/index.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.10",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.5.2"
  }
}
